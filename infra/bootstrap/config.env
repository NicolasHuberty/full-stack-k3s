# K3s Cluster Configuration
# Copy this file to config.local.env and customize your values
# The .local.env file is gitignored for security

# Cluster Configuration
export CLUSTER_DOMAIN="mycluster.example.com"
export CLUSTER_NAME="k3s-prod"

# MetalLB Configuration
# Define the IP range for LoadBalancer services
export METALLB_IP_RANGE="192.168.1.240-192.168.1.250"

# K3s Configuration
export K3S_VERSION="v1.28.5+k3s1"

# Cloudflare Configuration (for ExternalDNS and Cert-Manager)
export CLOUDFLARE_EMAIL="your-email@example.com"
export CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"
export CLOUDFLARE_ZONE_ID="your-zone-id"

# Let's Encrypt Configuration
export ACME_EMAIL="your-email@example.com"
export ACME_SERVER="https://acme-v02.api.letsencrypt.org/directory"  # Production
# export ACME_SERVER="https://acme-staging-v02.api.letsencrypt.org/directory"  # Staging for testing

# Vault Configuration
export VAULT_ADDR="http://vault.vault.svc.cluster.local:8200"
export VAULT_NAMESPACE="vault"

# Monitoring Configuration
export GRAFANA_ADMIN_PASSWORD="admin"  # CHANGE THIS!
export GRAFANA_DOMAIN="grafana.${CLUSTER_DOMAIN}"

# Argo CD Configuration
export ARGOCD_DOMAIN="argocd.${CLUSTER_DOMAIN}"
export ARGOCD_ADMIN_PASSWORD=""  # Auto-generated if empty

# Rancher Configuration
export RANCHER_DOMAIN="rancher.${CLUSTER_DOMAIN}"
export RANCHER_BOOTSTRAP_PASSWORD="admin"  # CHANGE THIS!

# GitHub Configuration (for CI/CD)
export GITHUB_TOKEN=""
export GITHUB_REPO="your-org/your-repo"

# Container Registry
export CONTAINER_REGISTRY="ghcr.io"
export REGISTRY_USERNAME=""
export REGISTRY_PASSWORD=""
